[colors]
background = #5a000000
foreground = #eee
; background = ${xrdb:color0}
; background-alt = ${xrdb:color0}
; foreground = ${xrdb:color7}
; foreground-alt = ${xrdb:color8}
; primary =${xrdb:color4}
; secondary = ${xrdb:color6}
; alert = ${xrdb:color3}
; accent = ${xrdb:color2}

[sizes]
width = 100%
height = 35
offset-x = 0
offset-y = -1
underline-size = 2
spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
label-padding = 2

[fonts]
text-font = Monaco:antialias=true:pixelsize=14;2
icon-font = FontAwesome:pixelsize=10;1

[bar/primary]
monitor = ${env:PRIMARY_MONITOR}
width = ${sizes.width}
height = ${sizes.height}
offset-x = ${sizes.offset-x}
offset-y = ${sizes.offset-y}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = ${sizes.underline-size}
underline-color = ${colors.foreground}

spacing = ${sizes.spacing}
padding-left = ${sizes.padding-left}
padding-right = ${sizes.padding-right}
module-margin-left = ${sizes.module-margin-left}
module-margin-right = ${sizes.module-margin-right}

font-0 = ${fonts.text-font}
font-1 = ${fonts.icon-font}

modules-left = bspwm xwindow
modules-right = spotify volume date powermenu

tray-position = right
tray-padding = ${sizes.label-padding}

wm-restack = bspwm

[bar/secondary]
monitor = ${env:SECONDARY_MONITOR}
width = ${sizes.width}
height = ${sizes.height}
offset-x = ${sizes.offset-x}
offset-y = ${sizes.offset-y}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = ${sizes.underline-size}
underline-color = ${colors.foreground}

spacing = ${sizes.spacing}
padding-left = ${sizes.padding-left}
padding-right = ${sizes.padding-right}
module-margin-left = ${sizes.module-margin-left}
module-margin-right = ${sizes.module-margin-right}

font-0 = ${fonts.text-font}
font-1 = ${fonts.icon-font}

modules-left = bspwm xwindow
modules-right = date

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = #88000000
label-focused-underline= #ddd
label-focused-padding = ${sizes.label-padding}

label-occupied = %icon%
label-occupied-padding = ${sizes.label-padding}

label-urgent = %icon%
label-urgent-padding = ${sizes.label-padding}

label-empty = %icon%
label-empty-foreground = #44ffffff
label-empty-padding = ${sizes.label-padding}

[module/xwindow]
type = internal/xwindow

label = %title:0:120:...%
label-padding = ${sizes.label-padding}

[module/spotify]
type = custom/script

format =   <label>
format-padding = ${sizes.label-padding}

exec = ~/.config/polybar/spotify.sh
interval = 1

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #aaa
format-volume-padding = ${sizes.label-padding}
format-muted-padding = ${sizes.label-padding}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

[module/date]
type = internal/date

interval = 1.0
date = %a %b %d
time = %H:%M

label = %date% %time%
format =   <label>
format-background = #88000000
format-padding = ${sizes.label-padding}

[module/powermenu]
type = custom/menu

label-open = 
label-close = cancel
label-open-padding = ${sizes.label-padding}
label-close-padding = ${sizes.label-padding}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-0-padding = ${sizes.label-padding}
menu-0-1-padding = ${sizes.label-padding}

menu-1-0 = reboot?
menu-1-0-exec = sudo reboot
menu-1-0-padding = ${sizes.label-padding}

menu-2-0 = power off?
menu-2-0-exec = sudo poweroff
menu-2-0-padding = ${sizes.label-padding}

