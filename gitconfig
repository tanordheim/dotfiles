[user]
    name = Trond Nordheim
    email = trond@nordheim.io
[github]
    user = tanordheim
[core]
    pager = less -FXRS -x2
    excludesfile = /home/trond/.gitignore_global
	autocrlf = input
	editor = vim
[merge]
    tool = vimdiff
[apply]
    whitespace = nowarn
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[branch]
    autosetupmerge = true
[rebase]
    autosquash = true
[push]
    default = simple
[rerere]
    enabled = 1
    autoupdate = true
[alias]
    st = status
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all :/
    ff = merge --ff-only
    pullff = pull --ff-only
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pr = pull --rebase
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
